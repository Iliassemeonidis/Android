<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:elevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_text_view"
            app:layout_constraintEnd_toStartOf="@+id/list_item_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_item_text_view"
            app:srcCompat="@android:drawable/checkbox_off_background"
            android:contentDescription="@string/checkbox" />

        <TextView
            android:id="@+id/list_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:width="200sp"
            android:gravity="center"
            android:padding="@dimen/list_item_text_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/remove_item"
            app:layout_constraintEnd_toStartOf="@+id/remove_item"
            app:layout_constraintTop_toTopOf="@+id/remove_item"
            tools:text="Заметка Екатеренбург" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_text_view" />

        <ImageView
            android:id="@+id/remove_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_marginStart="@dimen/margin"
            app:layout_constraintBottom_toBottomOf="@+id/moveItemUp"
            app:layout_constraintEnd_toStartOf="@+id/moveItemUp"
            app:layout_constraintTop_toTopOf="@+id/moveItemUp"
            app:srcCompat="@drawable/ic_close"
            android:contentDescription="@string/clear" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/moveItemUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/moveItemDown"
            app:layout_constraintEnd_toStartOf="@+id/moveItemDown"
            app:layout_constraintTop_toTopOf="@+id/moveItemDown"
            app:srcCompat="@android:drawable/arrow_up_float" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/moveItemDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/arrow_down_float" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
